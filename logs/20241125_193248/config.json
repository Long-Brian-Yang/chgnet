{
    "batch_size": 32,
    "num_epochs": 50,
    "learning_rate": 0.001,
    "split_ratio": [
        0.7,
        0.1,
        0.2
    ],
    "random_state": 42,
    "train_composition_model": true,
    "normalize_energy": true,
    "early_stopping": {
        "enabled": true,
        "patience": 10,
        "min_delta": 0.0001
    },
    "model_config": {
        "freeze_layers": [
            "atom_embedding",
            "bond_embedding",
            "angle_embedding",
            "bond_basis_expansion",
            "angle_basis_expansion",
            "atom_conv_layers[-1:]",
            "bond_conv_layers",
            "angle_layers"
        ]
    }
}